rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================================================
    // Helper Functions
    // ============================================================================

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if user is the document owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Check if user has driver role
    function isDriver() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'DRIVER';
    }

    // Check if user has rider role
    function isRider() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'RIDER';
    }

    // Check if user has admin role (supports both 'role' string and 'roles' array)
    function isAdmin() {
      return isAuthenticated() && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN' ||
        'ADMIN' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles
      );
    }

    // ============================================================================
    // User Documents
    // ============================================================================

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();

      // User settings subcollection (notifications, preferences, etc.)
      match /settings/{settingId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
      }
    }

    // ============================================================================
    // Driver Registration Progress (for saving/resuming incomplete registrations)
    // ============================================================================

    match /driverRegistrationProgress/{userId} {
      // Users can only read/write their own registration progress
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId) || isAdmin();
    }

    // ============================================================================
    // Driver Documents
    // ============================================================================

    match /drivers/{driverId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(driverId);
      allow update: if isOwner(driverId) || isAdmin();
      allow delete: if isAdmin();

      // Driver subcollections (documents, settings, earnings, stats)
      match /{subcollection}/{docId} {
        allow read: if isAuthenticated();
        allow create: if isOwner(driverId);
        allow update: if isOwner(driverId) || isAdmin();
        allow delete: if isAdmin();
      }
    }

    // ============================================================================
    // Trips
    // ============================================================================

    match /trips/{tripId} {
      // Read access: authenticated users who are participants, or valid share token
      allow read: if isAuthenticated() && (
        resource.data.riderId == request.auth.uid ||
        resource.data.driverId == request.auth.uid ||
        isAdmin()
      );
      allow create: if isAuthenticated();
      // Only trip participants can update
      allow update: if isAuthenticated() && (
        resource.data.riderId == request.auth.uid ||
        resource.data.driverId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isAdmin();

      // Trip messages subcollection
      match /messages/{messageId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update: if isAuthenticated();
        allow delete: if isAdmin();
      }
    }

    // ============================================================================
    // Tracking Sessions - Secure Access with Share Token Support
    // ============================================================================

    match /trackingSessions/{sessionId} {
      // Read access:
      // 1. Authenticated trip participants (driver or rider)
      // 2. Anyone with a valid share token (for share links)
      // Share token must be passed as query parameter and match document's shareToken
      allow read: if isAuthenticated() && (
        resource.data.driverId == request.auth.uid ||
        resource.data.riderId == request.auth.uid ||
        isAdmin()
      );

      // Only authenticated users can create sessions
      allow create: if isAuthenticated();

      // Only the session creator (driver) or admin can update
      allow update: if isAuthenticated() &&
        (resource.data.driverId == request.auth.uid || isAdmin());

      // Only admin can delete
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Public Tracking Links - Token-based read-only access for share links
    // ============================================================================

    match /publicTrackingLinks/{linkId} {
      // Anyone can read if they have the correct link ID (which acts as the token)
      // These documents contain only minimal, non-sensitive trip tracking data
      allow read: if true;

      // Only authenticated drivers can create public tracking links
      allow create: if isAuthenticated();

      // Only the creator or admin can update/delete
      allow update: if isAuthenticated() &&
        (resource.data.createdBy == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() &&
        (resource.data.createdBy == request.auth.uid || isAdmin());
    }

    // ============================================================================
    // User Blocks
    // ============================================================================

    match /userBlocks/{blockId} {
      allow read: if isAuthenticated() &&
        (resource.data.blockerId == request.auth.uid ||
         resource.data.blockedId == request.auth.uid ||
         isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
        resource.data.blockerId == request.auth.uid;
      allow delete: if isAuthenticated() &&
        (resource.data.blockerId == request.auth.uid || isAdmin());
    }

    // ============================================================================
    // Strikes
    // ============================================================================

    match /strikes/{strikeId} {
      allow read: if isAuthenticated() &&
        (resource.data.driverId == request.auth.uid || isAdmin());
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Suspensions
    // ============================================================================

    match /suspensions/{suspensionId} {
      allow read: if isAuthenticated() &&
        (resource.data.driverId == request.auth.uid || isAdmin());
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Transactions
    // ============================================================================

    match /transactions/{transactionId} {
      allow read: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid ||
         resource.data.driverId == request.auth.uid ||
         isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Notifications
    // ============================================================================

    match /notifications/{notificationId} {
      // Allow read if user is the recipient (check both userId and driverId fields)
      allow read: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid || resource.data.driverId == request.auth.uid);
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid || resource.data.driverId == request.auth.uid);
      allow delete: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid || resource.data.driverId == request.auth.uid);
    }

    // ============================================================================
    // Messages
    // ============================================================================

    match /messages/{messageId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Activity Logs
    // ============================================================================

    match /activity_logs/{logId} {
      // Allow admin to read all logs, users can read their own
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if false;
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Emergency Alerts
    // ============================================================================

    match /emergencyAlerts/{alertId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() || isAdmin();
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Payment Disputes
    // ============================================================================

    match /paymentDisputes/{disputeId} {
      allow read: if isAuthenticated() &&
        (resource.data.riderId == request.auth.uid ||
         resource.data.driverId == request.auth.uid ||
         isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Speed Violations
    // ============================================================================

    match /speedViolations/{violationId} {
      allow read: if isAuthenticated() &&
        (resource.data.driverId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Route Deviations
    // ============================================================================

    match /routeDeviations/{deviationId} {
      allow read: if isAuthenticated() &&
        (resource.data.driverId == request.auth.uid ||
         resource.data.riderId == request.auth.uid ||
         isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Ratings
    // ============================================================================

    match /ratings/{ratingId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
        resource.data.raterId == request.auth.uid;
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Rider Reviews (from drivers rating riders)
    // ============================================================================

    match /riderReviews/{reviewId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
        resource.data.driverId == request.auth.uid;
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Driver Reviews (from riders rating drivers)
    // ============================================================================

    match /driverReviews/{reviewId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
        resource.data.riderId == request.auth.uid;
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Saved Addresses
    // ============================================================================

    match /savedAddresses/{addressId} {
      allow read: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
    }

    // ============================================================================
    // Favorites
    // ============================================================================

    match /favorites/{favoriteId} {
      allow read: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
    }

    // ============================================================================
    // Trip Issues (Admin)
    // ============================================================================

    match /tripIssues/{issueId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Payouts (Admin)
    // ============================================================================

    match /payouts/{payoutId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Safety Reports (Admin)
    // ============================================================================

    match /safety_reports/{reportId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Support Tickets (Report Issues)
    // ============================================================================

    match /support_tickets/{ticketId} {
      allow read: if isAuthenticated() &&
        (resource.data.riderId == request.auth.uid ||
         resource.data.driverId == request.auth.uid ||
         isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Contact Requests (Contact Us Form)
    // ============================================================================

    match /contact_requests/{requestId} {
      allow read: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // ============================================================================
    // Admin Notifications (Driver Applications, Document Resubmissions, etc.)
    // ============================================================================

    match /admin_notifications/{notificationId} {
      // Only admins can read notifications
      allow read: if isAdmin();
      // Any authenticated user can create (for driver applications, etc.)
      allow create: if isAuthenticated();
      // Only admins can update (mark as read, etc.)
      allow update: if isAdmin();
      // Only admins can delete
      allow delete: if isAdmin();
    }
  }
}
